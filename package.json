{
  "name": "@moda/om",
  "version": "0.0.0-development",
  "description": "Moda Operandi design system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "repository": "git@github.com:ModaOperandi/om.git",
  "author": "ModaOperandi",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:documentation": "NODE_ENV=production cd documentation && yarn build",
    "build:storybook": "NODE_ENV=storybook build-storybook",
    "build": "NODE_ENV=production yarn compile && yarn types",
    "clean": "rm -rf ./dist",
    "compile": "yarn webpack",
    "predeploy:documentation": "NODE_ENV=production yarn build && cd documentation && yarn install && yarn build",
    "prepublishOnly": "yarn clean && yarn build",
    "semantic-release": "semantic-release",
    "start": "cd documentation && yarn start",
    "storybook": "start-storybook -p 6006",
    "types": "tsc -p tsconfig.json --emitDeclarationOnly"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "moda-themes": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "@types/react": "^16.9.11",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.2.0",
    "cz-conventional-changelog": "3.0.2",
    "extract-css-chunks-webpack-plugin": "^4.6.0",
    "husky": "^3.0.9",
    "node-sass": "^4.12.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "semantic-release": "^15.13.30"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
